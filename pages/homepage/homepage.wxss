/* 整体页面 */
page {
  display: block;
  min-height: 100%;
  background-color: #101318;
}
/* 顶部外框 */
.title-box{
  position: fixed;
  width: 100%;
  top: 0;
  height: 100rpx;
  z-index: 200;
  background-color: #1D2228;
}
/* 搜索框整体外框 */
.top-bar{
  width: 90%;
  display: flex;
  border-radius: 50px;
  background-color: #101318;
  margin: 0rpx 5% 15rpx 5%;
}
/* 搜索框 */
.input-search {
  width: 85%;
  margin: 7rpx 5% 7rpx 10%;
  font-size: 30rpx;
  font-weight: bold;
  color: #686E7A;
}
/* 搜索按钮 */
.search-icon{
  margin: 15rpx 0% 0rpx 3%;
}
/* 清空按钮 */
.clear-icon{
  margin: 15rpx 3% 0rpx 0%;
}

/* 防掩盖 */
.deTop {
  margin-top: 19%;
}
/* 提示框 */
.text-box{
  height: 50rpx;
  background-color: #1D2228;
}
/* 搜索下框 */
.title-text{
  color:  #3D81CC;
  margin-left: 5%;
  font-size: 28rpx;
  background-color: #1D2228;
}

/* 分割线 */
.stock-line{
  height: 3rpx;
  margin-top: 12rpx;
  background-color: #666E79;
  margin-left: 2%;
  margin-right: 2%;
}
/* 股票名称显示 */
.stock-name{
  display: flex;
  margin-top: 18rpx;
  margin-left: 5%;
  font-size : 35rpx;
  font-family :STKaiti;
  color: #FFFFFF;  
}
/* 股票代码显示 */
.stock-code{
  margin-left: 5%;
  font-size : 30rpx;
  font-family :STKaiti;
  color: #686E7A;
}

/* 股票加自选按钮 */
.option-button {
  width: 25%;
  font-size: 25rpx;
  margin-right: 5%;
  background-color: #3A3E47;
  color: white;
}

/*回到顶部按钮  */
.bigWrap{ 
  background:#101318; 
} 
/* /goTop回到顶部图标start/  */
.com-widget-goTop { 
  position: fixed; 
  bottom: 125px; 
  right: 5px; 
  background: rgba(0,0,0,0.48); 
  border-radius: 50%; 
  overflow: hidden; 
  z-index: 500; 
} 
.com-widget-goTop .icon-gotop{ 
  background-color: rgba(0,0,0,0.8); 
  display: inline-block; 
  width: 50px; 
  height: 50px; 
  line-height: 68px; 
  font-size: 12px; 
  color: #ffffff; 
  text-align: center; 
  border-radius: 50%; 
  background: no-repeat center -1110px;  
  -webkit-background-size: 50px auto;  
}
